<html>

<head>
    <title></title>
    <link rel="stylesheet" href="css/style.css" />
    <link id="bootstrap-css" href="css/bootstrap.min.css" rel="stylesheet" />
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="javascripts/main.js"></script>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
    integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>

<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" role="navigation" style="height: 70px;">
                <div class="container">
                    <a class="navbar-brand" style="font-family: fantasy;color: white;"><img class="logo" src="http://localhost:3000/images/Logo.png" alt="My_Logo" style="width: 90px;"></a>
                    <button class="btn btn-primary"><a href = "/login_process" style="color:white;">Logout</a></button>
                </div>
        </nav>
     <div class="container-fluid h-100" style="margin-left: 50px;margin-top: 40px;" >
        <div class="row justify-content-center h-100" style="padding-left: 70px;">
            <div class="col-md-3 col-xl-3 chat">
                <div class="card mb-sm-3 mb-md-0 contacts_card">
                    <div class="card-header">
                        <div class="input-group">
                            <input class="form-control search" id="myInput" type="text" autocomplete="off" placeholder="Search..." name=""
                                onkeyup="mysearch()" style="font-family: fantasy;" />
                            <div class="input-group-prepend"><span class="input-group-text search_btn"><i
                                        class="fas fa-search"></i></span></div>
                        </div>
                    </div>
                    <div class="card-body contacts_body">
                        <ui class="contacts" id="myUL">
                            <% bots.forEach(function(dat) { %>

                            <li>
                                <div class="d-flex bd-highlight" ondrop="drop(event)" ondragover="allowDrop(event)"
                                    id="<%=dat.id %>" src="<%= dat.image_url %>">
                                    <div class="img_cont"><img class="rounded-circle user_img" draggable="true"
                                            id="<%=dat.id %>" ondragstart="drag(event)" src="<%= dat.image_url %>" />
                                    </div>
                                    <div class="user_info" style="font-family: fantasy;"><span id="<%=dat.id %>_name"><%= dat.name %></span>
                                        <p id="<%=dat.id %>_description"><%= dat.description %></p>
                                    </div>
                                </div>
                            </li>

                            <% }); %>

                        </ui>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div class="col-md-7 col-xl-6 chat">
                <div class="card">
                    <div class="card-header msg_head">
                        <div class="d-flex bd-highlight row" style="height: 70px;">
                            <div class="col-sm-6" id="question" align="left" ondrop="drop_question(event)"
                                ondragenter="dragEnter(event)" ondragover="allowDrop(event)">
                                <span id="_question" style="font: size 18px;font-family: fantasy;color:white;">Drag and drop bot to question</span>
                            </div>
                            <div class="col-sm-6" id="answer" align="right" ondrop="drop_answer(event)"
                                ondragenter="dragEnter(event)" ondragover="allowDrop(event)">
                                <span id="_answer" style="font: size 18px;font-family: fantasy;color: white;">Drag and drop bot to answer</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body msg_card_body" id="body">
                        
                    </div>
                    <div class="card-footer">
                        <div class="row rounded-btn">
                            <div class="col">
                                <button class="col btn btn-purple-moon " onclick="getintents()" style="font-family: fantasy;">START</button>
                            </div>
                            <div class="col">
                                <button class="col btn btn-ultra-voilet " onclick="stop_conversation()"
                                    disabled style="font-family: fantasy;">STOP</button>
                            </div>
                            <div class="col" id = "download">
                                <button class="col btn save btn-pink-moon btn-success " id = "savebutton"
                                    onclick="save_conversation()" disabled style="font-family: fantasy;">SAVE</button>
                            </div>

                            <div class="col" id = "download">
                                <button class="btn btn-success " onclick="reset_conversation()" style="font-family: fantasy;">RESET</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-xl-2 state-alert" id="state-alert" style="opacity: 0;font-family: fantasy;font-size: 12px;" ></div>
        </div>
    </div>
  
</body>

</html>